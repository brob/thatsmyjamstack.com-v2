{% extends 'templates/base.njk' %}
{% from "macros/player.njk" import player %}


{% block bannerContent %}
    {% for episode in collections.episodes | slice(0,1) %}
        {{ player(episode.data.title, episode.data.description, episode.data.audioFile, episode.url) }}
       
    {% endfor %}

{% endblock %}


{% block content %}
    <section class="episodes variable-grid">
        <h2 class="full-span section-title">Next Episodes</h2>        
        {% for episode in collections.episodes | slice(1,7) %}
            <article class="episode card [ stack stack--small ]">
                <img class="card__image" src="{{ episode.data.socialImage }}" alt="{{ episode.data.title }} Promo Image">
                <h3 class="card__headline"><a href="{{ episode.url }}">{{ episode.data.title }}</a></h3>
                <p class="card__description">{{ episode.data.description }}</p>
            </article>
        {% endfor %}
        <a href="/episodes" style="grid-column: 1 / -1;" class="button">View All Episodes</a>
    </section>  
{% endblock content %}
{% extends 'templates/base.njk' %}


{% block content %}
        {{ content | safe }}

    <section class="episodes variable-grid">
        {% for episode in collections.episodes %}
            <article class="episode card [ stack stack--small ]">
                <a href="{{ episode.url }}" class="card__image"><img class="card__image" src="{{ episode.data.socialImage }}" alt="{{ episode.data.title }} Promo Image"></a>
                <h3 class="card__headline"><a href="{{ episode.url }}">{{ episode.data.title }}</a></h3>
                <p class="card__description">{{ episode.data.description }}</p>
            </article>
        {% endfor %}
    </section>  
{% endblock %}